@using PackerTracker.Models;
<h1>List</h1>

@if (Model.Count == 0)
{
  <p>There are no items in the list.</p>
}
<ul>
  @foreach (Thing thing in Model)
  {
     <li><a href='/things/@thing.Id'>@item.Description</a></li>
  }
</ul>

</ul>
<a href="/things/new">Add a new thing.</a>
<form action="/things/delete" method="post">
  <button type="submit" name="button">Clear All things</button>
</form>